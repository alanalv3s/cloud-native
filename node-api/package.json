{
  "name": "node-api",
  "version": "1.0.0",
  "description": "Example API to use with CNCF tools",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "serve": "node dist/index.js",
    "lint": "npx eslint src test",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src test --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@tsconfig/node-lts": "^20.1.3",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.5",
    "@types/winston": "^2.4.4",
    "eslint": "^9.12.0",
    "globals": "^15.10.0",
    "prettier": "3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-node": "^10.9.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.8.1"
  }
}